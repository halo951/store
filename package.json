{
    "name": "@fdu/workspace",
    "version": "0.0.2",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "release": [
        "packages/store",
        "packages/store-adapter-vue2",
        "packages/store-adapter-vue3",
        "packages/store-plugin-datasource",
        "packages/store-plugin-devtool",
        "packages/store-plugin-module-sign",
        "packages/store-plugin-observer"
    ],
    "scripts": {
        "clean": "rimraf packages/*/dist && rimraf packages/*/typings",
        "size": "node scripts/total-size.mjs",
        "test": "jest --coverage",
        "build": "node scripts/build.mjs",
        "update:quote": "node scripts/update-pkg-name.mjs",
        "release": "yarn clean && yarn build && yrm use npm && yarn release",
        "lint:fix": "prettier -w **.ts **.md **.json",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
        "docs": "",
        "release:docs": ""
    },
    "gitHooks": {
        "pre-commit": "yarn lint:fix"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.16.11",
        "@rollup/plugin-babel": "^5.3.1",
        "@rollup/plugin-node-resolve": "^13.2.1",
        "@rollup/plugin-replace": "^4.0.0",
        "@types/glob": "^7.2.0",
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.25",
        "@types/set-value": "^4.0.1",
        "brotli-wasm": "^1.1.0",
        "chalk": "^5.0.1",
        "conventional-changelog-cli": "^2.2.2",
        "del": "^6.0.0",
        "glob": "^8.0.1",
        "jest": "^27.5.1",
        "klona": "^2.0.5",
        "markdown-table": "^3.0.2",
        "prettier": "^2.6.2",
        "rollup": "^2.70.2",
        "rollup-plugin-dts": "^4.2.1",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.31.2",
        "set-value": "^4.1.0",
        "ts-jest": "^27.1.4",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.3",
        "zlib": "^1.0.5"
    },
    "dependencies": {
        "eslint-plugin-ysfe": "^0.3.6",
        "event-emitter": "^0.3.5"
    }
}
